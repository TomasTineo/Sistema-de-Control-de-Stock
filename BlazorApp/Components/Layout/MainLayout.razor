@inherits LayoutComponentBase

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Control de Stock</title>

    <!-- Bootstrap CSS (CDN CONFIABLE) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
          rel="stylesheet"
          crossorigin="anonymous">

    <!-- Bootstrap Icons -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
</head>
<body>
    <!-- Bootstrap necesita un contenedor -->
    <div class="container-fluid">
        @Body
    </div>

    <!-- Bootstrap JS (OBLIGATORIO para componentes interactivos) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
            crossorigin="anonymous"></script>

    <!-- jQuery (algunas funciones de Bootstrap lo necesitan) -->
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>

    <!-- Script para probar que JS funciona -->
    <script>
        console.log("JavaScript cargado correctamente");

        // Verificar Bootstrap
        if (typeof bootstrap !== 'undefined') {
            console.log("✓ Bootstrap cargado");
        } else {
            console.log("✗ Bootstrap NO cargado");
        }

        // Agregar listener a TODOS los botones
        document.addEventListener('DOMContentLoaded', function() {
            console.log("DOM cargado");

            var botones = document.querySelectorAll('button');
            console.log("Botones encontrados:", botones.length);

            botones.forEach(function(boton, i) {
                boton.addEventListener('click', function(e) {
                    console.log("Botón " + i + " clickeado (JS puro)");
                    console.log("Texto:", boton.textContent.trim());

                    // Probar spinner
                    if (boton.classList.contains('btn-primary')) {
                        console.log("Es el botón de login");
                        boton.innerHTML = '<span class="spinner-border spinner-border-sm"></span> Procesando...';
                        boton.disabled = true;

                        // Revertir después de 2 segundos
                        setTimeout(function() {
                            boton.innerHTML = '<i class="bi bi-box-arrow-in-right me-2"></i> Ingresar';
                            boton.disabled = false;
                        }, 2000);
                    }
                });
            });
        });
    </script>
</body>
</html>
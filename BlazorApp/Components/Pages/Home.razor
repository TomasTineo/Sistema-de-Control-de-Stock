@page "/"
@inject BlazorApp.Services.AuthService AuthService
@inject NavigationManager Navigation

<div class="container mt-5">
    @if (!AuthService.IsLoggedIn())
    {
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card login-card">
                    <div class="card-header text-center bg-primary text-white">
                        <h4 class="mb-0"><i class="bi bi-shield-lock"></i> Acceso Requerido</h4>
                    </div>
                    <div class="card-body text-center">
                        <i class="bi bi-person-x display-1 text-warning mb-3"></i>
                        <h5 class="card-title">Debes iniciar sesión</h5>
                        <p class="card-text">Para acceder al Sistema de Control de Stock, primero debes autenticarte.</p>
                        <a href="/login" class="btn btn-primary btn-lg">
                            <i class="bi bi-box-arrow-in-right me-2"></i> Ir al Login
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header bg-gradient-primary text-white">
                        <h3 class="mb-0">
                            <i class="bi bi-house-door me-2"></i> Panel de Control
                        </h3>
                    </div>
                    <div class="card-body">
                        <div class="alert alert-success">
                            <h5 class="alert-heading">
                                <i class="bi bi-person-check me-2"></i> Sesión Activa
                            </h5>
                            <p class="mb-0">Usuario conectado: <strong>@AuthService.GetUsername()</strong></p>
                        </div>

                        <h5 class="mt-4 mb-3"><i class="bi bi-speedometer2 me-2"></i> Acciones Rápidas</h5>
                        <div class="row">
                            <div class="col-md-3 mb-3">
                                <button class="btn btn-success w-100 h-100 py-3">
                                    <i class="bi bi-box-seam display-6 d-block mb-2"></i>
                                    <span>Productos</span>
                                </button>
                            </div>
                            <div class="col-md-3 mb-3">
                                <button class="btn btn-info w-100 h-100 py-3">
                                    <i class="bi bi-tags display-6 d-block mb-2"></i>
                                    <span>Categorías</span>
                                </button>
                            </div>
                            <div class="col-md-3 mb-3">
                                <button class="btn btn-warning w-100 h-100 py-3">
                                    <i class="bi bi-arrow-left-right display-6 d-block mb-2"></i>
                                    <span>Movimientos</span>
                                </button>
                            </div>
                            <div class="col-md-3 mb-3">
                                <button @onclick="Logout" class="btn btn-danger w-100 h-100 py-3">
                                    <i class="bi bi-box-arrow-right display-6 d-block mb-2"></i>
                                    <span>Cerrar Sesión</span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private void Logout()
    {
        AuthService.Logout();
        Navigation.NavigateTo("/login");
    }
}
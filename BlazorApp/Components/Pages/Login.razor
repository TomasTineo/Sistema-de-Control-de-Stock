@page "/login"
@inject BlazorApp.Services.AuthService AuthService
@inject NavigationManager Navigation

<!-- HTML SIMPLE sin scripts conflictivos -->
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white text-center">
                    <h4>Control de Stock</h4>
                </div>

                <div class="card-body">
                    <h5 class="card-title text-center mb-4">Iniciar Sesión</h5>

                    <!-- Usar onchange en lugar de oninput -->
                    <div class="mb-3">
                        <label class="form-label">Usuario:</label>
                        <input type="text" class="form-control"
                               value="@username"
                               @onchange="@((ChangeEventArgs e) => username = e.Value?.ToString() ?? "")"
                               placeholder="admin" />
                    </div>

                    <div class="mb-4">
                        <label class="form-label">Contraseña:</label>
                        <input type="password" class="form-control"
                               value="@password"
                               @onchange="@((ChangeEventArgs e) => password = e.Value?.ToString() ?? "")"
                               placeholder="123" />
                    </div>

                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger">
                            @errorMessage
                        </div>
                    }

                    <!-- Botón SIN preventDefault -->
                    <div class="d-grid">
                        <button @onclick="RealHandleLogin"
                                class="btn btn-primary btn-lg"
                                disabled="@isLoading">
                            @if (isLoading)
                            {
                                <span class="spinner-border spinner-border-sm me-2"></span>
                                <span>Procesando...</span>
                            }
                            else
                            {
                                <span>Ingresar</span>
                            }
                        </button>
                    </div>

                    <div class="mt-3 text-center">
                        <small class="text-muted">WebAPI: https://localhost:7001</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private string username = "";
    private string password = "";
    private string errorMessage = "";
    private bool isLoading = false;

    protected override void OnInitialized()
    {
        Console.WriteLine("=== LOGIN INICIALIZADO ===");
    }

    private async Task RealHandleLogin()
    {
        Console.WriteLine("=== BOTÓN CLICKEADO ===");
        Console.WriteLine($"Usuario: {username}");

        // Cambiar UI inmediatamente
        isLoading = true;
        errorMessage = "";
        StateHasChanged(); // FORZAR ACTUALIZACIÓN

        // Pequeña pausa para que se vea el spinner
        await Task.Delay(10);

        try
        {
            Console.WriteLine("Llamando a AuthService.Login...");
            var success = await AuthService.Login(username, password);
            Console.WriteLine($"Resultado: {success}");

            if (success)
            {
                Console.WriteLine("Redirigiendo...");
                Navigation.NavigateTo("/");
            }
            else
            {
                errorMessage = "Credenciales incorrectas";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error: {ex.Message}";
            Console.WriteLine($"Excepción: {ex}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }
}
@page "/categorias/editar/{id:int}"
@rendermode InteractiveServer
@using DTOs.Categorias
@using Blazor.Services
@inject ICategoriaService CategoriaService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<div class="container mt-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-pencil-square"></i> Editar Categoría</h1>
        <button class="btn btn-outline-secondary" @onclick="VolverALista">
            <i class="bi bi-arrow-left"></i> Volver a Categorías
        </button>
    </div>

    <!-- Estado inicial -->
    @if (!_hasInitialized)
    {
        <div class="text-center my-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Inicializando...</span>
            </div>
            <p class="mt-2">Inicializando editor...</p>
        </div>
    }
    else
    {
        <!-- Loading State -->
        @if (isLoading)
        {
            <div class="text-center my-5">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Cargando...</span>
                </div>
                <p class="mt-2">Cargando categoría...</p>
            </div>
        }

        <!-- Categoría no encontrada -->
        @if (!isLoading && categoria == null)
        {
            <div class="alert alert-warning">
                <h5><i class="bi bi-exclamation-triangle"></i> Categoría no encontrada</h5>
                <p>La categoría con ID @Id no existe o no se pudo cargar.</p>
                <button class="btn btn-outline-primary" @onclick="VolverALista">
                    Volver a la lista
                </button>
            </div>
        }

        <!-- Formulario de edición -->
        @if (!isLoading && categoria != null)
        {
            <div class="row">
                <div class="col-lg-8">
                    <div class="card shadow">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">
                                <i class="bi bi-info-circle"></i> Editando: @categoria.Nombre
                            </h5>
                        </div>

                        <div class="card-body">
                            <EditForm Model="@categoria" OnValidSubmit="@ActualizarCategoria">
                                <DataAnnotationsValidator />
                                <ValidationSummary class="alert alert-danger" />

                                <!-- ID (solo lectura) -->
                                <div class="mb-3">
                                    <label class="form-label fw-bold">
                                        <i class="bi bi-hash"></i> ID de la Categoría
                                    </label>
                                    <input type="text"
                                           class="form-control-plaintext"
                                           value="@categoria.Id"
                                           readonly />
                                    <div class="form-text">El ID no se puede modificar</div>
                                </div>

                                <!-- Campo Nombre -->
                                <div class="mb-4">
                                    <label for="nombre" class="form-label fw-bold">
                                        <i class="bi bi-tag"></i> Nombre de la Categoría *
                                    </label>
                                    <InputText id="nombre"
                                               @bind-Value="categoria.Nombre"
                                               class="form-control form-control-lg"
                                               placeholder="Ej: Electrónica, Ropa, Hogar..." />
                                    <ValidationMessage For="@(() => categoria.Nombre)" class="text-danger small" />
                                    <div class="form-text">Nombre único para identificar la categoría</div>
                                </div>

                                <!-- Mensajes de estado -->
                                @if (!string.IsNullOrEmpty(SuccessMessage))
                                {
                                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                                        <i class="bi bi-check-circle-fill"></i> @SuccessMessage
                                        <button type="button" class="btn-close" @onclick="CerrarMensajes"></button>
                                    </div>
                                }

                                @if (!string.IsNullOrEmpty(ErrorMessage))
                                {
                                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                        <i class="bi bi-exclamation-triangle-fill"></i> @ErrorMessage
                                        <button type="button" class="btn-close" @onclick="CerrarMensajes"></button>
                                    </div>
                                }

                                <!-- Botones de acción -->
                                <div class="d-flex gap-3 mt-4 pt-3 border-top">
                                    <button type="submit"
                                            class="btn btn-primary btn-lg px-4"
                                            disabled="@isSaving">
                                        @if (isSaving)
                                        {
                                            <span>
                                                <span class="spinner-border spinner-border-sm me-2"></span>
                                                Guardando...
                                            </span>
                                        }
                                        else
                                        {
                                            <span>
                                                <i class="bi bi-save me-2"></i> Guardar Cambios
                                            </span>
                                        }
                                    </button>

                                    <button type="button"
                                            class="btn btn-outline-secondary btn-lg px-4"
                                            @onclick="RestaurarOriginal"
                                            disabled="@isSaving">
                                        <i class="bi bi-arrow-counterclockwise me-2"></i> Restaurar
                                    </button>

                                    <button type="button"
                                            class="btn btn-outline-danger btn-lg px-4"
                                            @onclick="VolverALista"
                                            disabled="@isSaving">
                                        <i class="bi bi-x-circle me-2"></i> Cancelar
                                    </button>
                                </div>
                            </EditForm>
                        </div>
                    </div>
                </div>

                <!-- Panel lateral informativo -->
                <div class="col-lg-4">
                    <div class="card shadow mb-4">
                        <div class="card-header bg-info text-white">
                            <h6 class="mb-0"><i class="bi bi-info-circle"></i> Información</h6>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <h6><i class="bi bi-calendar"></i> Última actualización</h6>
                                <p class="mb-0">@DateTime.Now.ToString("dd/MM/yyyy HH:mm")</p>
                            </div>

                            <div class="mb-3">
                                <h6><i class="bi bi-person"></i> Editado por</h6>
                                <p class="mb-0">@GetCurrentUser()</p>
                            </div>

                            <div class="mb-3">
                                <h6><i class="bi bi-exclamation-triangle"></i> Advertencia</h6>
                                <p class="small text-muted mb-0">
                                    Cambiar el nombre de una categoría puede afectar a los productos asociados.
                                </p>
                            </div>
                        </div>
                    </div>

                    <!-- Vista previa -->
                    <div class="card shadow">
                        <div class="card-header bg-light">
                            <h6 class="mb-0"><i class="bi bi-eye"></i> Vista Previa</h6>
                        </div>
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-3">
                                <div class="category-color-preview"
                                     style="background-color: @GetCategoryColor(categoria.Id);">
                                </div>
                                <div class="ms-3">
                                    <h5 class="mb-0">@categoria.Nombre</h5>
                                    <small class="text-muted">ID: @categoria.Id</small>
                                </div>
                            </div>

                            <div class="alert alert-warning small">
                                <i class="bi bi-lightbulb"></i>
                                Los cambios se guardarán cuando pulses "Guardar Cambios"
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>

@code {
    [Parameter]
    public int Id { get; set; }

    // Modelo y estados
    private CategoriaDTO categoria;
    private CategoriaDTO categoriaOriginal; // Para restaurar cambios
    private bool _hasInitialized = false;
    private bool isLoading = true;
    private bool isSaving = false;
    private string ErrorMessage = string.Empty;
    private string SuccessMessage = string.Empty;

    // Inicialización
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && !_hasInitialized)
        {
            await InicializarPagina();
        }
    }

    private async Task InicializarPagina()
    {
        try
        {
            Console.WriteLine($"=== INICIALIZANDO EDICIÓN CATEGORÍA ID: {Id} ===");
            _hasInitialized = true;
            StateHasChanged();

            await CargarCategoria();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error inicializando: {ex.Message}");
            ErrorMessage = "Error al inicializar la página.";
            _hasInitialized = true;
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task CargarCategoria()
    {
        try
        {
            Console.WriteLine($"Cargando categoría con ID: {Id}");
            categoria = await CategoriaService.GetCategoriaByIdAsync(Id);

            if (categoria != null)
            {
                // Guardar copia original
                categoriaOriginal = new CategoriaDTO
                {
                    Id = categoria.Id,
                    Nombre = categoria.Nombre
                };

                Console.WriteLine($"Categoría cargada: {categoria.Nombre}");
            }
            else
            {
                Console.WriteLine($"Categoría con ID {Id} no encontrada");
                ErrorMessage = "Categoría no encontrada.";
            }
        }
        catch (HttpRequestException ex) when (ex.StatusCode == System.Net.HttpStatusCode.NotFound)
        {
            ErrorMessage = "La categoría solicitada no fue encontrada.";
        }
        catch (HttpRequestException ex) when (ex.StatusCode == System.Net.HttpStatusCode.Unauthorized)
        {
            ErrorMessage = "No tienes permisos para editar categorías.";
            await Task.Delay(2000);
            Navigation.NavigateTo("/");
        }
        catch (Exception ex)
        {
            ErrorMessage = $"Error al cargar la categoría: {ex.Message}";
            Console.WriteLine($"Error: {ex}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    // Método para actualizar la categoría
    private async Task ActualizarCategoria()
    {
        isSaving = true;
        ErrorMessage = string.Empty;
        SuccessMessage = string.Empty;
        StateHasChanged();

        try
        {
            Console.WriteLine($"=== ACTUALIZANDO CATEGORÍA ID: {Id} ===");
            Console.WriteLine($"Nuevo nombre: {categoria.Nombre}");

            // Validación
            if (string.IsNullOrWhiteSpace(categoria.Nombre))
            {
                throw new ArgumentException("El nombre de la categoría es requerido");
            }

            // Verificar si hay cambios
            if (categoria.Nombre == categoriaOriginal.Nombre)
            {
                SuccessMessage = "No hay cambios para guardar.";
                return;
            }

            // Llamar al servicio
            var categoriaActualizada = await CategoriaService.UpdateCategoriaAsync(Id, categoria);

            // Actualizar la copia original
            categoriaOriginal = new CategoriaDTO
            {
                Id = categoriaActualizada.Id,
                Nombre = categoriaActualizada.Nombre
            };

            SuccessMessage = $"¡Categoría '{categoriaActualizada.Nombre}' actualizada exitosamente!";

            // Redirigir después de un tiempo
            await Task.Delay(2000);
            Navigation.NavigateTo("/categorias");
        }
        catch (HttpRequestException ex)
        {
            if (ex.StatusCode == System.Net.HttpStatusCode.Unauthorized)
            {
                ErrorMessage = "No tienes permiso para actualizar categorías.";
                await Task.Delay(2000);
                Navigation.NavigateTo("/");
            }
            else if (ex.StatusCode == System.Net.HttpStatusCode.NotFound)
            {
                ErrorMessage = "La categoría no fue encontrada. Puede que haya sido eliminada.";
            }
            else if (ex.StatusCode == System.Net.HttpStatusCode.BadRequest)
            {
                ErrorMessage = "Error en los datos enviados. Verifica la información.";
            }
            else if (ex.StatusCode == System.Net.HttpStatusCode.Conflict)
            {
                ErrorMessage = "Ya existe una categoría con ese nombre.";
            }else if (ex.StatusCode == System.Net.HttpStatusCode.Forbidden)
            {
                ErrorMessage = "Requiere admin";
            }
            else 
            {
               
                ErrorMessage = $"Error al actualizar categoría: {ex.Message}";
            }
        }
        catch (ArgumentException ex)
        {
            ErrorMessage = ex.Message;
        }
        catch (Exception ex)
        {
            ErrorMessage = $"Error inesperado: {ex.Message}";
            Console.WriteLine($"Error: {ex}");
        }
        finally
        {
            isSaving = false;
            StateHasChanged();
        }
    }

    // Métodos auxiliares
    private void RestaurarOriginal()
    {
        if (categoriaOriginal != null)
        {
            categoria = new CategoriaDTO
            {
                Id = categoriaOriginal.Id,
                Nombre = categoriaOriginal.Nombre
            };

            SuccessMessage = "Cambios restaurados a la versión original.";
            ErrorMessage = string.Empty;
            StateHasChanged();
        }
    }

    private void VolverALista()
    {
        Navigation.NavigateTo("/categorias");
    }

    private void CerrarMensajes()
    {
        ErrorMessage = string.Empty;
        SuccessMessage = string.Empty;
        StateHasChanged();
    }

    private string GetCategoryColor(int id)
    {
        var colors = new[]
        {
            "#3498db", "#2ecc71", "#e74c3c", "#f39c12", "#9b59b6",
            "#1abc9c", "#d35400", "#c0392b", "#16a085", "#8e44ad"
        };
        return colors[id % colors.Length];
    }

    private string GetCurrentUser()
    {
        // Aquí podrías obtener el usuario actual de tu sistema de autenticación
        return "Administrador";
    }
}


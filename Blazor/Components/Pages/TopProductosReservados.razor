@page "/reportes/top-productos-reservados"
@rendermode InteractiveServer
@using Blazor.Interfaces
@using DTOs.Reportes
@inject IReportesService ReportesService
@inject NavigationManager Navigation

<h3>Reporte: Top Productos Más Reservados</h3>

<div class="filter-section">
    <div class="form-group">
        <label>Mostrar Top:</label>
        <input type="number" class="form-control" @bind="topCantidad" min="1" max="100" />
    </div>
    <button class="btn btn-primary" @onclick="CargarReporte">
        Generar Reporte
    </button>
    <button class="btn btn-secondary" @onclick="Volver">
        Volver
    </button>
</div>

@if (cargando)
{
    <div class="text-center">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Cargando...</span>
        </div>
        <p>Cargando reporte...</p>
    </div>
}
else if (errorMensaje != null)
{
    <div class="alert alert-danger" role="alert">
        @errorMensaje
    </div>
}
else if (productos != null && productos.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Producto</th>
                    <th>Cantidad Reservada</th>
                    <th>Número de Reservas</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < productos.Count; i++)
                {
                    var producto = productos[i];
                    var posicion = i + 1;
                    <tr class="@GetRowClass(posicion)">
                        <td>
                            @if (posicion <= 3)
                            {
                                <span class="badge @GetBadgeClass(posicion)">@posicion</span>
                            }
                            else
                            {
                                <span>@posicion</span>
                            }
                        </td>
                        <td><strong>@producto.NombreProducto</strong></td>
                        <td>@producto.CantidadReservada unidades</td>
                        <td>@producto.NumeroReservas reserva(s)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="alert alert-info">
        <strong>Total:</strong> Se encontraron @productos.Count producto(s) con reservas.
        <br />
        <strong>Más reservado:</strong> @productos.First().NombreProducto con @productos.First().CantidadReservada unidades reservadas.
    </div>
}
else if (productos != null)
{
    <div class="alert alert-warning">
        No hay productos con reservas en el sistema.
    </div>
}

@code {
    private List<TopProductoReservadoDTO> productos = new();
    private int topCantidad = 10;
    private bool cargando = false;
    private string? errorMensaje = null;
    private int maxCantidad = 0;

    protected override async Task OnInitializedAsync()
    {
        await CargarReporte();
    }

    private async Task CargarReporte()
    {
        try
        {
            cargando = true;
            errorMensaje = null;
            productos = await ReportesService.GetTopProductosReservadosAsync(topCantidad);
            
            if (productos.Any())
            {
                maxCantidad = productos.Max(p => p.CantidadReservada);
            }
        }
        catch (Exception ex)
        {
            errorMensaje = $"Error al cargar el reporte: {ex.Message}";
            Console.WriteLine($"Error: {ex}");
        }
        finally
        {
            cargando = false;
        }
    }

    private string GetRowClass(int posicion)
    {
        return posicion switch
        {
            1 => "table-warning",
            2 => "table-light",
            3 => "table-light",
            _ => ""
        };
    }

    private string GetBadgeClass(int posicion)
    {
        return posicion switch
        {
            1 => "bg-warning text-dark",
            2 => "bg-secondary",
            3 => "bg-info",
            _ => "bg-light"
        };
    }

    private int GetPorcentaje(int cantidad)
    {
        if (maxCantidad == 0) return 0;
        return (int)((double)cantidad / maxCantidad * 100);
    }

    private void Volver()
    {
        Navigation.NavigateTo("/reportes");
    }
}

<style>
    .filter-section {
        background: #f8f9fa;
        padding: 1.5rem;
        border-radius: 8px;
        margin-bottom: 1.5rem;
        display: flex;
        gap: 1rem;
        align-items: end;
    }

    .form-group {
        flex: 1;
        max-width: 200px;
    }

    .form-group label {
        font-weight: 600;
        margin-bottom: 0.5rem;
        display: block;
    }

    .table-responsive {
        margin-top: 1rem;
    }

    .badge {
        padding: 0.5rem 0.75rem;
        font-size: 1rem;
        font-weight: bold;
    }

    .progress {
        border-radius: 10px;
    }

    .progress-bar {
        font-weight: 600;
    }
</style>

@page "/eventos"
@rendermode InteractiveServer
@using DTOs.Eventos
@using Blazor.Services
@inject IEventoService EventoService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<div class="container mt-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1><i class="bi bi-calendar-event"></i> Eventos</h1>
            <p class="text-muted">Administra los eventos programados</p>
        </div>
        <div>
            <button class="btn btn-outline-secondary me-2" @onclick="GoToDashboard">
                <i class="bi bi-arrow-left"></i> Dashboard
            </button>
            <button class="btn btn-success" @onclick="GoToCreateEvento">
                <i class="bi bi-plus-circle"></i> Nuevo Evento
            </button>
        </div>
    </div>

    <!-- Filtros -->
    <div class="card mb-4">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Filtrar por estado</label>
                    <select class="form-select" @bind="filtroEstado">
                        <option value="Todos">Todos los eventos</option>
                        <option value="Proximos">Próximos</option>
                        <option value="Pasados">Pasados</option>
                        <option value="Hoy">Hoy</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <label class="form-label">Buscar por nombre</label>
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="bi bi-search"></i>
                        </span>
                        <input type="text"
                               class="form-control"
                               placeholder="Buscar eventos..."
                               @bind="searchTerm"
                               @bind:event="oninput" />
                    </div>
                </div>
                <div class="col-md-4">
                    <label class="form-label">Ordenar por</label>
                    <select class="form-select" @bind="orden">
                        <option value="FechaAsc">Fecha (más cercano primero)</option>
                        <option value="FechaDesc">Fecha (más lejano primero)</option>
                        <option value="NombreAsc">Nombre (A-Z)</option>
                        <option value="NombreDesc">Nombre (Z-A)</option>
                    </select>
                </div>
            </div>
        </div>
    </div>

    <!-- Estado inicial -->
    @if (!_hasInitialized)
    {
        <div class="text-center my-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Inicializando...</span>
            </div>
            <p class="mt-2">Inicializando eventos...</p>
        </div>
    }
    else
    {
        <!-- Loading State -->
        @if (isLoading)
        {
            <div class="text-center my-5">
                <div class="spinner-border text-primary" role="status"></div>
                <p class="mt-2">Cargando eventos...</p>
            </div>
        }

        <!-- Error State -->
        @if (!string.IsNullOrEmpty(ErrorMessage))
        {
            <div class="alert alert-danger" role="alert">
                <h5><i class="bi bi-exclamation-triangle"></i> Error</h5>
                <p>@ErrorMessage</p>
                @if (ErrorMessage.Contains("No autorizado") || ErrorMessage.Contains("401"))
                {
                    <button class="btn btn-primary mt-2" @onclick="RedirectToLogin">
                        Ir al Login
                    </button>
                }
                else
                {
                    <button class="btn btn-outline-danger mt-2" @onclick="CargarEventos">
                        Reintentar
                    </button>
                }
            </div>
        }

        <!-- Sin eventos -->
        @if (!isLoading && string.IsNullOrEmpty(ErrorMessage) && eventos.Count == 0)
        {
            <div class="alert alert-info">
                <h5><i class="bi bi-info-circle"></i> No hay eventos</h5>
                <p>No se encontraron eventos programados.</p>
                <button class="btn btn-outline-info" @onclick="GoToCreateEvento">
                    <i class="bi bi-plus-circle"></i> Crear primer evento
                </button>
            </div>
        }

        <!-- Con eventos -->
        @if (!isLoading && string.IsNullOrEmpty(ErrorMessage) && eventos.Count > 0)
        {
            <!-- Estadísticas -->
            <div class="row mb-4">
                <div class="col-md-3">
                    <div class="card text-white bg-primary">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-calendar-event fs-1 me-3"></i>
                                <div>
                                    <h6 class="card-title mb-0">Total Eventos</h6>
                                    <p class="fs-4 mb-0">@eventos.Count</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card text-white bg-success">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-clock fs-1 me-3"></i>
                                <div>
                                    <h6 class="card-title mb-0">Próximos</h6>
                                    <p class="fs-4 mb-0">@eventos.Count(e => e.FechaEvento >= DateTime.Today)</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card text-white bg-warning">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-calendar-check fs-1 me-3"></i>
                                <div>
                                    <h6 class="card-title mb-0">Hoy</h6>
                                    <p class="fs-4 mb-0">@eventos.Count(e => e.FechaEvento.Date == DateTime.Today)</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card text-white bg-info">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-calendar-x fs-1 me-3"></i>
                                <div>
                                    <h6 class="card-title mb-0">Pasados</h6>
                                    <p class="fs-4 mb-0">@eventos.Count(e => e.FechaEvento < DateTime.Today)</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Lista de eventos -->
            <div class="card">
                <div class="card-header bg-light d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Eventos Programados</h5>
                    <span class="badge bg-primary">
                        @eventosFiltrados.Count eventos
                    </span>
                </div>

                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>ID</th>
                                <th>Nombre del Evento</th>
                                <th>Fecha del Evento</th>
                                <th>Días Restantes</th>
                                <th>Estado</th>
                                <th class="text-end">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var evento in eventosFiltrados)
                            {
                                <tr>
                                    <td>
                                        <span class="badge bg-secondary">#@evento.Id</span>
                                    </td>
                                    <td>
                                        <strong>@evento.NombreEvento</strong>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <i class="bi bi-calendar-date text-primary me-2"></i>
                                            <span>@evento.FechaEvento.ToString("dd/MM/yyyy HH:mm")</span>
                                        </div>
                                    </td>
                                    <td>
                                        @{
                                            var diasRestantes = (evento.FechaEvento.Date - DateTime.Today).Days;
                                            if (diasRestantes > 0)
                                            {
                                                <span class="badge bg-success">
                                                    <i class="bi bi-clock"></i> @diasRestantes días
                                                </span>
                                            }
                                            else if (diasRestantes == 0)
                                            {
                                                <span class="badge bg-warning">
                                                    <i class="bi bi-exclamation-circle"></i> ¡Hoy!
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">
                                                    <i class="bi bi-check-circle"></i> Finalizado
                                                </span>
                                            }
                                        }
                                    </td>
                                    <td>
                                        @if (evento.FechaEvento > DateTime.Now)
                                        {
                                            <span class="badge bg-primary">
                                                <i class="bi bi-clock"></i> Pendiente
                                            </span>
                                        }
                                        else if (evento.FechaEvento.Date == DateTime.Today)
                                        {
                                            <span class="badge bg-warning">
                                                <i class="bi bi-exclamation-triangle"></i> En curso
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">
                                                <i class="bi bi-check-circle"></i> Completado
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        <div class="d-flex justify-content-end gap-2">
                                            <button class="btn btn-sm btn-outline-warning"
                                                    @onclick="() => EditarEvento(evento.Id)"
                                                    title="Editar">
                                                    Editar
                                                <i class="bi bi-pencil"></i>
                                            </button>
                                            <button class="btn btn-sm btn-outline-danger"
                                                    @onclick="() => EliminarEvento(evento)"
                                                    title="Eliminar">
                                                    Eliminar
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Vista de calendario (alternativa) -->
            <div class="card mt-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-calendar-week"></i> Vista Calendario</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        @foreach (var evento in eventosProximos.Take(6))
                        {
                            <div class="col-md-4 mb-3">
                                <div class="card h-100 border-start border-4"
                                     style="border-left-color: @GetEventColor(evento);">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-start mb-2">
                                            <h6 class="card-title mb-0">@evento.NombreEvento</h6>
                                            <span class="badge" style="background-color: @GetEventColor(evento);">
                                                ID: @evento.Id
                                            </span>
                                        </div>
                                        <p class="card-text small">
                                            <i class="bi bi-calendar me-1"></i>
                                            @evento.FechaEvento.ToString("dddd, dd MMMM yyyy")
                                        </p>
                                        <p class="card-text small text-muted">
                                            <i class="bi bi-clock me-1"></i>
                                            @evento.FechaEvento.ToString("HH:mm") hrs
                                        </p>
                                        <div class="d-flex gap-2">
                                            <button class="btn btn-sm btn-outline-warning"
                                                    @onclick="() => EditarEvento(evento.Id)">
                                                Editar
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    }
</div>

@code {
    // Estados
    private List<EventoDTO> eventos = new();
    private bool _hasInitialized = false;
    private bool isLoading = true;
    private string ErrorMessage = string.Empty;
    private string searchTerm = string.Empty;
    private string filtroEstado = "Todos";
    private string orden = "FechaAsc";

    // Propiedades calculadas
    private List<EventoDTO> eventosFiltrados => GetFilteredEvents();
    private List<EventoDTO> eventosProximos => eventos
        .Where(e => e.FechaEvento >= DateTime.Today)
        .OrderBy(e => e.FechaEvento)
        .ToList();

    // Inicialización
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && !_hasInitialized)
        {
            await InicializarPagina();
        }
    }

    private async Task InicializarPagina()
    {
        try
        {
            Console.WriteLine("=== INICIALIZANDO PÁGINA EVENTOS ===");
            _hasInitialized = true;
            StateHasChanged();

            await CargarEventos();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error inicializando: {ex.Message}");
            ErrorMessage = "Error al inicializar la página.";
            _hasInitialized = true;
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task CargarEventos()
    {
        isLoading = true;
        ErrorMessage = string.Empty;
        StateHasChanged();

        try
        {
            Console.WriteLine("Cargando eventos...");
            eventos = await EventoService.GetEventosAsync();
            Console.WriteLine($"Eventos cargados: {eventos.Count}");
        }
        catch (HttpRequestException ex) when (ex.StatusCode == System.Net.HttpStatusCode.Unauthorized)
        {
            ErrorMessage = "No tienes permisos para ver los eventos.";
            await Task.Delay(2000);
            RedirectToLogin();
        }
        catch (HttpRequestException ex)
        {
            ErrorMessage = $"Error {ex.StatusCode}: {ex.Message}";
            Console.WriteLine($"Error HTTP: {ex.Message}");
        }
        catch (Exception ex)
        {
            ErrorMessage = $"Error: {ex.Message}";
            Console.WriteLine($"Error general: {ex.Message}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    // Métodos de filtrado y ordenamiento
    private List<EventoDTO> GetFilteredEvents()
    {
        IEnumerable<EventoDTO> resultado = eventos;

        // Filtro por búsqueda
        if (!string.IsNullOrWhiteSpace(searchTerm))
        {
            var term = searchTerm.ToLower();
            resultado = resultado.Where(e =>
                e.NombreEvento.ToLower().Contains(term)
            );
        }

        // Filtro por estado
        switch (filtroEstado)
        {
            case "Proximos":
                resultado = resultado.Where(e => e.FechaEvento >= DateTime.Today);
                break;
            case "Pasados":
                resultado = resultado.Where(e => e.FechaEvento < DateTime.Today);
                break;
            case "Hoy":
                resultado = resultado.Where(e => e.FechaEvento.Date == DateTime.Today);
                break;
        }

        // Ordenamiento
        resultado = orden switch
        {
            "FechaAsc" => resultado.OrderBy(e => e.FechaEvento),
            "FechaDesc" => resultado.OrderByDescending(e => e.FechaEvento),
            "NombreAsc" => resultado.OrderBy(e => e.NombreEvento),
            "NombreDesc" => resultado.OrderByDescending(e => e.NombreEvento),
            _ => resultado.OrderBy(e => e.FechaEvento)
        };

        return resultado.ToList();
    }

    // Métodos de navegación
    private void GoToDashboard() => Navigation.NavigateTo("/dashboard");
    private void GoToCreateEvento() => Navigation.NavigateTo("/eventos/nuevo");
    private void VerDetalles(int id) => Navigation.NavigateTo($"/eventos/{id}");
    private void EditarEvento(int id) => Navigation.NavigateTo($"/eventos/editar/{id}");
    private void RedirectToLogin() => Navigation.NavigateTo("/", true);

    // Métodos de acciones
    private async Task EliminarEvento(EventoDTO evento)
    {
        var confirmar = await JSRuntime.InvokeAsync<bool>("confirm",
            $"¿Estás seguro de eliminar el evento '{evento.NombreEvento}'?\n\n" +
            $"Fecha: {evento.FechaEvento.ToString("dd/MM/yyyy HH:mm")}");

        if (confirmar)
        {
            try
            {
                var resultado = await EventoService.DeleteEventoAsync(evento.Id);
                if (resultado)
                {
                    await CargarEventos(); // Recargar lista
                }
                else
                {
                    ErrorMessage = "No se pudo eliminar el evento.";
                    StateHasChanged();
                }
            }
            catch (Exception ex)
            {
                ErrorMessage = $"Error al eliminar evento: {ex.Message}";
                StateHasChanged();
            }
        }
    }

    // Métodos auxiliares
    private string GetEventColor(EventoDTO evento)
    {
        if (evento.FechaEvento < DateTime.Today)
            return "#95a5a6"; // Gris para eventos pasados
        if (evento.FechaEvento.Date == DateTime.Today)
            return "#f39c12"; // Naranja para hoy
        if ((evento.FechaEvento.Date - DateTime.Today).Days <= 7)
            return "#e74c3c"; // Rojo para próxima semana
        if ((evento.FechaEvento.Date - DateTime.Today).Days <= 30)
            return "#3498db"; // Azul para próximo mes

        return "#2ecc71"; // Verde para más lejanos
    }
}


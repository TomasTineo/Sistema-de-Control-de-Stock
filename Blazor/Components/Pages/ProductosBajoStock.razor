@page "/reportes/productos-bajo-stock"
@rendermode InteractiveServer
@using Blazor.Interfaces
@using DTOs.Reportes
@inject IReportesService ReportesService
@inject NavigationManager Navigation

<h3>Reporte: Productos con Bajo Stock</h3>

<div class="filter-section">
    <div class="form-group">
        <label>Stock Mínimo:</label>
        <input type="number" class="form-control" @bind="stockMinimo" min="1" />
    </div>
    <button class="btn btn-primary" @onclick="CargarReporte">
        Generar Reporte
    </button>
    <button class="btn btn-secondary" @onclick="Volver">
        Volver
    </button>
</div>

@if (cargando)
{
    <div class="text-center">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Cargando...</span>
        </div>
        <p>Cargando reporte...</p>
    </div>
}
else if (errorMensaje != null)
{
    <div class="alert alert-danger" role="alert">
        @errorMensaje
    </div>
}
else if (productos != null && productos.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Producto</th>
                    <th>Stock Actual</th>
                    <th>Estado</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var producto in productos)
                {
                    <tr class="@GetRowClass(producto.StockActual)">
                        <td>@producto.NombreProducto</td>
                        <td>@producto.StockActual</td>
                        <td>
                            @if (producto.StockActual == 0)
                            {
                                <span class="badge bg-danger">Sin Stock</span>
                            }
                            else if (producto.StockActual < 5)
                            {
                                <span class="badge bg-warning">Crítico</span>
                            }
                            else
                            {
                                <span class="badge bg-info">Bajo</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="alert alert-info">
        <strong>Total:</strong> @productos.Count producto(s) con stock bajo el mínimo de @stockMinimo unidades.
    </div>
}
else if (productos != null)
{
    <div class="alert alert-success">
        No hay productos con stock por debajo de @stockMinimo unidades.
    </div>
}

@code {
    private List<ProductoStockDTO> productos = new();
    private int stockMinimo = 10;
    private bool cargando = false;
    private string? errorMensaje = null;

    protected override async Task OnInitializedAsync()
    {
        await CargarReporte();
    }

    private async Task CargarReporte()
    {
        try
        {
            cargando = true;
            errorMensaje = null;
            productos = await ReportesService.GetProductosBajoStockAsync(stockMinimo);
        }
        catch (Exception ex)
        {
            errorMensaje = $"Error al cargar el reporte: {ex.Message}";
            Console.WriteLine($"Error: {ex}");
        }
        finally
        {
            cargando = false;
        }
    }

    private string GetRowClass(int stock)
    {
        if (stock == 0) return "table-danger";
        if (stock < 5) return "table-warning";
        return "";
    }

    private void Volver()
    {
        Navigation.NavigateTo("/reportes");
    }
}

<style>
    .filter-section {
        background: #f8f9fa;
        padding: 1.5rem;
        border-radius: 8px;
        margin-bottom: 1.5rem;
        display: flex;
        gap: 1rem;
        align-items: end;
    }

    .form-group {
        flex: 1;
        max-width: 200px;
    }

    .form-group label {
        font-weight: 600;
        margin-bottom: 0.5rem;
        display: block;
    }

    .table-responsive {
        margin-top: 1rem;
    }

    .badge {
        padding: 0.5rem 0.75rem;
    }
</style>

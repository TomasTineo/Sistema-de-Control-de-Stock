@page "/reportes/productos-bajo-stock"
@rendermode InteractiveServer
@using Blazor.Interfaces
@using DTOs.Reportes
@inject IReportesService ReportesService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
@using ClosedXML.Excel



<h3>Reporte: Productos con Bajo Stock</h3>

<div class="filter-section">
    <div class="form-group">
        <label>Stock Mínimo:</label>
        <input type="number" class="form-control" @bind="stockMinimo" min="1" />
    </div>
    <button class="btn btn-primary" @onclick="CargarReporte">
        Generar Reporte
    </button>
    <button class="btn btn-secondary" @onclick="Volver">
        Volver
    </button>
    <button class="btn btn-success" @onclick="ExportarAExcel">
        <i class="bi bi-file-earmark-excel me-2"></i> Exportar a Excel
    </button>
</div>

@if (cargando)
{
    <div class="text-center">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Cargando...</span>
        </div>
        <p>Cargando reporte...</p>
    </div>
}
else if (errorMensaje != null)
{
    <div class="alert alert-danger" role="alert">
        @errorMensaje
    </div>
}
else if (productos != null && productos.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Producto</th>
                    <th>Stock Actual</th>
                    <th>Estado</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var producto in productos)
                {
                    <tr class="@GetRowClass(producto.StockActual)">
                        <td>@producto.NombreProducto</td>
                        <td>@producto.StockActual</td>
                        <td>
                            @if (producto.StockActual == 0)
                            {
                                <span class="badge bg-danger">Sin Stock</span>
                            }
                            else if (producto.StockActual < (stockMinimo/2))
                            {
                                <span class="badge bg-warning">Crítico</span>
                            }
                            else
                            {
                                <span class="badge bg-info">Bajo</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="alert alert-info">
        <strong>Total:</strong> @productos.Count producto(s) con stock bajo el mínimo de @stockMinimo unidades.
    </div>
}
else if (productos != null)
{
    <div class="alert alert-success">
        No hay productos con stock por debajo de @stockMinimo unidades.
    </div>
}

@code {
    private List<ProductoStockDTO> productos = new();
    private int stockMinimo = 10;
    private bool cargando = false;
    private string? errorMensaje = null;

    protected override async Task OnInitializedAsync()
    {
        await CargarReporte();
    }

    private async Task CargarReporte()
    {
        try
        {
            cargando = true;
            errorMensaje = null;
            productos = await ReportesService.GetProductosBajoStockAsync(stockMinimo);
        }
        catch (Exception ex)
        {
            errorMensaje = $"Error al cargar el reporte: {ex.Message}";
            Console.WriteLine($"Error: {ex}");
        }
        finally
        {
            cargando = false;
        }
    }

    private string GetRowClass(int stock)
    {
        if (stock == 0) return "table-danger";
        if (stock < 5) return "table-warning";
        return "";
    }

    private void Volver()
    {
        Navigation.NavigateTo("/reportes");
    }

    private async Task ExportarAExcel()
    {
        try
        {
            cargando = true;
            StateHasChanged();

            using (var workbook = new XLWorkbook())
            {
                var worksheet = workbook.Worksheets.Add("Productos bajo stock");

                // Encabezados
                worksheet.Cell(1, 1).Value = "#";
                worksheet.Cell(1, 2).Value = "Producto";
                worksheet.Cell(1, 3).Value = "Stock";
				worksheet.Cell(1, 4).Value = "Estado";



                // Estilo encabezados
                var headerRange = worksheet.Range("A1:E1");
                headerRange.Style.Font.Bold = true;
                headerRange.Style.Fill.BackgroundColor = XLColor.LightBlue;
                headerRange.Style.Alignment.Horizontal = XLAlignmentHorizontalValues.Center;

                // Datos
                for (int i = 0; i < productos.Count; i++)
                {
                    var item = productos[i];


                    worksheet.Cell(i + 2, 1).Value = i + 1;
                    worksheet.Cell(i + 2, 2).Value = item.NombreProducto;
                    worksheet.Cell(i + 2, 3).Value = item.StockActual;
                    

                    if (item.StockActual == 0)
                    {
                        worksheet.Cell(i + 2, 4).Value = "Sin Stock";
                    }
                    else if (item.StockActual < (stockMinimo / 2))
                    {
                        worksheet.Cell(i + 2, 4).Value = "Crítico";
                    }
                    else
                    {
                        worksheet.Cell(i + 2, 4).Value = "Bajo";
                    }

                }

                // Autoajustar columnas
                worksheet.Columns().AdjustToContents();

                // Información adicional
                int lastRow = productos.Count + 3;
                worksheet.Cell(lastRow + 2, 1).Value = "Generado el:";
                worksheet.Cell(lastRow + 2, 2).Value = DateTime.Now.ToString("dd/MM/yyyy HH:mm");

                // Guardar en memoria
                using (var stream = new MemoryStream())
                {
                    workbook.SaveAs(stream);
                    var content = stream.ToArray();

                    // Descargar usando JavaScript
                    var fileName = $"Productos_Bajo_Stock{DateTime.Now:yyyyMMdd_HHmmss}.xlsx";
                    await JSRuntime.InvokeVoidAsync("downloadFile",
                        Convert.ToBase64String(content),
                        fileName,
                        "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet");
                }
            }
        }
        catch (Exception ex)
        {
            errorMensaje = $"Error al exportar: {ex.Message}";
            Console.WriteLine($"Error exportando: {ex.Message}");
        }
        finally
        {
            cargando = false;
            StateHasChanged();
        }
    }





}


@page "/categorias"
@rendermode InteractiveServer
@using DTOs.Categorias
@using Blazor.Services
@inject ICategoriaService CategoriaService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<div class="container mt-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1><i class="bi bi-tags"></i> Categorías</h1>
            <p class="text-muted">Administra las categorías de productos</p>
        </div>
        <div>
            <button class="btn btn-outline-secondary me-2" @onclick="GoToDashboard">
                <i class="bi bi-arrow-left"></i> Dashboard
            </button>
            <button class="btn btn-success" @onclick="GoToCreateCategoria">
                <i class="bi bi-plus-circle"></i> Nueva Categoría
            </button>
        </div>
    </div>

    <!-- Estado inicial -->
    @if (!_hasInitialized)
    {
        <div class="text-center my-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Inicializando...</span>
            </div>
            <p class="mt-2">Inicializando...</p>
        </div>
    }
    else
    {
        <!-- Loading State -->
        @if (isLoading)
        {
            <div class="text-center my-5">
                <div class="spinner-border text-primary" role="status"></div>
                <p class="mt-2">Cargando categorías...</p>
            </div>
        }

        <!-- Error State -->
        @if (!string.IsNullOrEmpty(ErrorMessage))
        {
            <div class="alert alert-danger" role="alert">
                <h5><i class="bi bi-exclamation-triangle"></i> Error</h5>
                <p>@ErrorMessage</p>
                @if (ErrorMessage.Contains("No autorizado") || ErrorMessage.Contains("401"))
                {
                    <button class="btn btn-primary mt-2" @onclick="RedirectToLogin">
                        Ir al Login
                    </button>
                }
                else
                {
                    <button class="btn btn-outline-danger mt-2" @onclick="CargarCategorias">
                        Reintentar
                    </button>
                }
            </div>
        }

        <!-- Sin categorías -->
        @if (!isLoading && string.IsNullOrEmpty(ErrorMessage) && categorias.Count == 0)
        {
            <div class="alert alert-info">
                <h5><i class="bi bi-info-circle"></i> No hay categorías</h5>
                <p>No se encontraron categorías registradas.</p>
                <button class="btn btn-outline-info" @onclick="GoToCreateCategoria">
                    <i class="bi bi-plus-circle"></i> Crear primera categoría
                </button>
            </div>
        }

        <!-- Con categorías -->
        @if (!isLoading && string.IsNullOrEmpty(ErrorMessage) && categorias.Count > 0)
        {
            <!-- Barra de búsqueda -->
            <div class="card mb-4">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-md-6">
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-search"></i>
                                </span>
                                <input type="text"
                                       class="form-control"
                                       placeholder="Buscar categorías por nombre..."
                                       @bind="searchTerm"
                                       @bind:event="oninput" />
                            </div>
                        </div>
                        <div class="col-md-6 text-end">
                            <span class="badge bg-primary">
                                @categoriasFiltradas.Count categorías
                            </span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Grid de categorías (tarjetas) -->
            <div class="row">
                @foreach (var categoria in categoriasFiltradas)
                {
                    <div class="col-md-4 mb-4">
                        <div class="card h-100 shadow-sm">
                            <div class="card-header" style="background-color: @GetCategoryColor(categoria.Id); color: white;">
                                <h5 class="mb-0">
                                    <i class="bi bi-tag"></i> @categoria.Nombre
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <span class="badge bg-secondary">
                                        ID: #@categoria.Id
                                    </span>
                                    <span class="badge bg-info">
                                        <i class="bi bi-box"></i>
                                        @(GetProductCountForCategory(categoria.Id)?.ToString() ?? "0") productos
                                    </span>
                                </div>

                                <!-- Aquí podrías mostrar productos de esta categoría si los tuvieras -->
                                <div class="mt-3">
                                    <small class="text-muted">
                                        <i class="bi bi-info-circle"></i>
                                        Haz clic en las acciones para gestionar esta categoría
                                    </small>
                                </div>
                            </div>
                            <div class="card-footer bg-transparent border-top">
                                <div class="d-flex justify-content-between">
                                    
                                    <button class="btn btn-sm btn-outline-warning"
                                            @onclick="() => EditarCategoria(categoria.Id)"
                                            title="Editar">
                                        <i class="bi bi-pencil"></i> Editar
                                    </button>
                                    <button class="btn btn-sm btn-outline-danger"
                                            @onclick="() => EliminarCategoria(categoria)"
                                            title="Eliminar">
                                        <i class="bi bi-trash"></i> Eliminar
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- También tabla como alternativa -->
            <div class="card mt-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Lista de Categorías (Tabla)</h5>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>ID</th>
                                <th>Nombre</th>
                                <th class="text-end">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var categoria in categoriasFiltradas)
                            {
                                <tr>
                                    <td>
                                        <span class="badge bg-secondary">#@categoria.Id</span>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="category-color" style="background-color: @GetCategoryColor(categoria.Id);"></div>
                                            <strong class="ms-2">@categoria.Nombre</strong>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="d-flex justify-content-end gap-2">
                                            
                                            <button class="btn btn-sm btn-outline-warning"
                                                    @onclick="() => EditarCategoria(categoria.Id)"
                                                    title="Editar">
                                                    Editar
                                                <i class="bi bi-pencil"></i>
                                            </button>
                                            <button class="btn btn-sm btn-outline-danger"
                                                    @onclick="() => EliminarCategoria(categoria)"
                                                    title="Eliminar">
                                                    Eliminar
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Estadísticas simples -->
            <div class="row mt-4">
                <div class="col-md-4">
                    <div class="card text-white bg-primary">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-tags fs-1 me-3"></i>
                                <div>
                                    <h6 class="card-title mb-0">Total Categorías</h6>
                                    <p class="fs-4 mb-0">@categorias.Count</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card text-white bg-success">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-check-circle fs-1 me-3"></i>
                                <div>
                                    <h6 class="card-title mb-0">Última categoría</h6>
                                    <p class="fs-6 mb-0">
                                        @(categorias.LastOrDefault()?.Nombre ?? "N/A")
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card text-white bg-info">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-box fs-1 me-3"></i>
                                <div>
                                    <h6 class="card-title mb-0">ID más alto</h6>
                                    <p class="fs-4 mb-0">
                                        @(categorias.Max(c => c.Id))
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>

@code {
    // Estados
    private List<CategoriaDTO> categorias = new();
    private bool _hasInitialized = false;
    private bool isLoading = true;
    private string ErrorMessage = string.Empty;
    private string searchTerm = string.Empty;

    // Propiedad calculada
    private List<CategoriaDTO> categoriasFiltradas => GetFilteredCategories();

    // Inicialización
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && !_hasInitialized)
        {
            await InicializarPagina();
        }
    }

    private async Task InicializarPagina()
    {
        try
        {
            Console.WriteLine("=== INICIALIZANDO PÁGINA CATEGORÍAS ===");
            _hasInitialized = true;
            StateHasChanged();

            await CargarCategorias();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error inicializando: {ex.Message}");
            ErrorMessage = "Error al inicializar la página.";
            _hasInitialized = true;
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task CargarCategorias()
    {
        isLoading = true;
        ErrorMessage = string.Empty;
        StateHasChanged();

        try
        {
            Console.WriteLine("Cargando categorías...");
            categorias = await CategoriaService.GetCategoriasAsync();
            Console.WriteLine($"Categorías cargadas: {categorias.Count}");
        }
        catch (HttpRequestException ex) when (ex.StatusCode == System.Net.HttpStatusCode.Unauthorized)
        {
            ErrorMessage = "No tienes permisos para ver las categorías.";
            await Task.Delay(2000);
            RedirectToLogin();
        }
        catch (HttpRequestException ex)
        {
            ErrorMessage = $"Error {ex.StatusCode}: {ex.Message}";
            Console.WriteLine($"Error HTTP: {ex.Message}");
        }
        catch (Exception ex)
        {
            ErrorMessage = $"Error: {ex.Message}";
            Console.WriteLine($"Error general: {ex.Message}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    // Métodos de filtrado
    private List<CategoriaDTO> GetFilteredCategories()
    {
        if (string.IsNullOrWhiteSpace(searchTerm))
            return categorias;

        var term = searchTerm.ToLower();
        return categorias.Where(c =>
            c.Nombre.ToLower().Contains(term)
        ).ToList();
    }

    // Métodos de navegación
    private void GoToDashboard() => Navigation.NavigateTo("/dashboard");
    private void GoToCreateCategoria() => Navigation.NavigateTo("/categorias/nueva");
    private void VerDetalles(int id) => Navigation.NavigateTo($"/categorias/{id}");
    private void EditarCategoria(int id) => Navigation.NavigateTo($"/categorias/editar/{id}");
    private void RedirectToLogin() => Navigation.NavigateTo("/", true);

    // Métodos de acciones
    private async Task EliminarCategoria(CategoriaDTO categoria)
    {
        var confirmar = await JSRuntime.InvokeAsync<bool>("confirm",
            $"¿Estás seguro de eliminar la categoría '{categoria.Nombre}'?");

        if (confirmar)
        {
            try
            {
                var resultado = await CategoriaService.DeleteCategoriaAsync(categoria.Id);
                if (resultado)
                {
                    await CargarCategorias(); // Recargar lista
                }
                else
                {
                    ErrorMessage = "No se pudo eliminar la categoría.";
                    StateHasChanged();
                }
            }
            catch (Exception ex)
            {
                ErrorMessage = $"Error al eliminar categoría: {ex.Message}";
                StateHasChanged();
            }
        }
    }

    // Métodos auxiliares
    private string GetCategoryColor(int id)
    {
        var colors = new[]
        {
            "#3498db", "#2ecc71", "#e74c3c", "#f39c12", "#9b59b6",
            "#1abc9c", "#d35400", "#c0392b", "#16a085", "#8e44ad"
        };
        return colors[id % colors.Length];
    }

    // Este método es opcional - si tienes productos, podrías contar cuántos hay por categoría
    private int? GetProductCountForCategory(int categoriaId)
    {
